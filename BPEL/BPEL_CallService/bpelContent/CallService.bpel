<bpel:process name="CallService"
         targetNamespace="http://callservice.localhost"
         suppressJoinFailure="yes"
         xmlns:tns="http://callservice.localhost"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns="http://webservice/">

    <!-- Import the client WSDL -->
	<bpel:import location="CallServiceArtifacts.wsdl" namespace="http://callservice.localhost" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:CallService"
                     myRole="CallServiceProvider"
                     />
        <bpel:partnerLink name="TaskPL" partnerLinkType="tns:TaskPLT" partnerRole="TaskPLRole"></bpel:partnerLink>
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:CallServiceRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:CallServiceResponseMessage"/>
        <bpel:variable name="TaskPLResponse" messageType="ns:GetTaskResponse"></bpel:variable>
        <bpel:variable name="TaskPLRequest" messageType="ns:GetTask"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in CallService.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:CallService"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        <bpel:assign validate="no" name="AssignToSOAPRequest">
            
            <bpel:copy>
                <bpel:from><bpel:literal xml:space="preserve"><tns:GetTask xmlns:tns="http://webservice/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:taskId>0</tns:taskId>
</tns:GetTask></bpel:literal></bpel:from>
                <bpel:to variable="TaskPLRequest" part="parameters"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:input]]></bpel:query>
                </bpel:from>
                <bpel:to part="parameters" variable="TaskPLRequest">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:taskId]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:invoke name="Invoke" partnerLink="TaskPL" operation="GetTask" portType="ns:ITaskWS" inputVariable="TaskPLRequest" outputVariable="TaskPLResponse"></bpel:invoke>
        <bpel:assign validate="no" name="AssignToSOAPResponse">
            
            <bpel:copy>
                <bpel:from><bpel:literal><tns:CallServiceResponse xmlns:tns="http://callservice.localhost" xmlns:tns1="http://webservice/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result>
    <description>description</description>
    <name>name</name>
    <priority>0</priority>
    <taskId>0</taskId>
  </tns:result>
</tns:CallServiceResponse>
</bpel:literal></bpel:from>
                <bpel:to variable="output" part="payload"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="parameters" variable="TaskPLResponse">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[return]]></bpel:query>
                </bpel:from>
                <bpel:to part="payload" variable="output">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:reply name="replyOutput" 
               partnerLink="client"
               portType="tns:CallService"
               operation="process" 
               variable="output"
               />
    </bpel:sequence>
</bpel:process>

